---
import Layout from "../layouts/Layout.astro"
---

<Layout title="Reglement" description="reglment du serveur">
  <section class="breadcrumb">
      <div class="container">
        <nav class="breadcrumb-nav">
          <div class="breadcrumb-item">
            <i class="fas fa-home breadcrumb-icon"></i>
            <a href="index.html">Accueil</a>
          </div>
          <span class="breadcrumb-separator">
            <i class="fas fa-chevron-right"></i>
          </span>
          <div class="breadcrumb-item active">
            <i class="fas fa-gavel breadcrumb-icon"></i>
            <span>Règlement</span>
          </div>
        </nav>
      </div>
    </section>

    <!-- Main Content -->
    <main class="main-content">
      <section class="page-hero">
        <div class="container">
          <h1 class="page-title">
            <i class="fas fa-gavel"></i>
            Règlement du Serveur
          </h1>
          <p class="page-subtitle">
            Toutes les règles à respecter pour une expérience chill et
            collaborative sur Capitalyx
          </p>
        </div>
      </section>

      <section class="content-section">
        <div class="container">
          <!-- Bouton TOC fixe -->
          <button
            class="toc-fixed-button"
            onclick="openTOCModal()"
            title="Table des matières"
          >
            <i class="fas fa-list"></i>
          </button>

          <!-- Modal TOC -->
          <div class="toc-modal" id="tocModal">
            <div class="toc-modal-content">
              <div class="toc-modal-header">
                <h3 class="toc-modal-title">
                  <i class="fas fa-list"></i>
                  Table des matières
                </h3>
                <button class="toc-modal-close" onclick="closeTOCModal()">
                  <i class="fas fa-times"></i>
                </button>
              </div>
              <ul class="toc-modal-list">
                <li class="toc-modal-item">
                  <a
                    href="#regles-generales"
                    class="toc-modal-link"
                    onclick="closeTOCModal()"
                  >
                    <i class="fas fa-users"></i>
                    Règles Générales
                  </a>
                </li>
                <li class="toc-modal-item">
                  <a
                    href="#regles-metiers"
                    class="toc-modal-link"
                    onclick="closeTOCModal()"
                  >
                    <i class="fas fa-briefcase"></i>
                    Règles des Métiers
                  </a>
                </li>
                <li class="toc-modal-item">
                  <a
                    href="#regles-gameplay"
                    class="toc-modal-link"
                    onclick="closeTOCModal()"
                  >
                    <i class="fas fa-gamepad"></i>
                    Règles de Gameplay
                  </a>
                </li>
                <li class="toc-modal-item">
                  <a
                    href="#sanctions"
                    class="toc-modal-link"
                    onclick="closeTOCModal()"
                  >
                    <i class="fas fa-gavel"></i>
                    Sanctions
                  </a>
                </li>
              </ul>
            </div>
          </div>
          <div class="rules-grid">
            <div class="rule-category" id="regles-generales">
              <div class="category-header">
                <i class="fas fa-users"></i>
                <h2>Règles Générales</h2>
              </div>
              <div class="rule-list">
                <div class="rule-item">
                  <div class="rule-number"><i class="fas fa-heart"></i></div>
                  <div class="rule-content">
                    <h3>Respect et Courtoisie</h3>
                    <p>
                      Tout manque de respect envers les autres joueurs ou le
                      staff est strictement interdit.
                    </p>
                  </div>
                </div>
                <div class="rule-item">
                  <div class="rule-number">
                    <i class="fas fa-comment-dots"></i>
                  </div>
                  <div class="rule-content">
                    <h3>Langage Approprié</h3>
                    <p>
                      Les insultes, propos discriminatoires ou haineux ne sont
                      pas tolérés.
                    </p>
                  </div>
                </div>
                <div class="rule-item">
                  <div class="rule-number"><i class="fas fa-ban"></i></div>
                  <div class="rule-content">
                    <h3>Publicité Interdite</h3>
                    <p>
                      Toute forme de publicité pour d'autres serveurs ou
                      services externes est interdite.
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <div class="rule-category" id="regles-metiers">
              <div class="category-header">
                <i class="fas fa-briefcase"></i>
                <h2>Règles des Métiers</h2>
              </div>
              <div class="rule-list">
                <div class="rule-item">
                  <div class="rule-number"><i class="fas fa-user-tie"></i></div>
                  <div class="rule-content">
                    <h3>Choix de Métier</h3>
                    <p>
                      Chaque joueur peut choisir librement son métier et en
                      changer à tout moment selon ses envies.
                    </p>
                  </div>
                </div>
                <div class="rule-item">
                  <div class="rule-number">
                    <i class="fas fa-hands-helping"></i>
                  </div>
                  <div class="rule-content">
                    <h3>Entraide Encouragée</h3>
                    <p>
                      L'échange de ressources et l'entraide entre joueurs sont
                      fortement encouragés pour créer une communauté solidaire.
                    </p>
                  </div>
                </div>
                <div class="rule-item">
                  <div class="rule-number">
                    <i class="fas fa-balance-scale"></i>
                  </div>
                  <div class="rule-content">
                    <h3>Fair-play Commercial</h3>
                    <p>
                      Les échanges doivent se faire dans un esprit de fair-play,
                      sans arnaque ni exploitation.
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <div class="rule-category" id="regles-gameplay">
              <div class="category-header">
                <i class="fas fa-gamepad"></i>
                <h2>Règles de Gameplay</h2>
              </div>
              <div class="rule-list">
                <div class="rule-item">
                  <div class="rule-number"><i class="fas fa-leaf"></i></div>
                  <div class="rule-content">
                    <h3>Ambiance Chill</h3>
                    <p>
                      Le serveur privilégie une ambiance détendue et conviviale.
                      Évitez les comportements agressifs.
                    </p>
                  </div>
                </div>
                <div class="rule-item">
                  <div class="rule-number"><i class="fas fa-hammer"></i></div>
                  <div class="rule-content">
                    <h3>Griefing Interdit</h3>
                    <p>
                      Détruire ou saboter le travail d'autres joueurs
                      volontairement est strictement interdit.
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <div class="rule-category sanctions" id="sanctions">
              <div class="category-header">
                <i class="fas fa-gavel"></i>
                <h2>Sanctions</h2>
              </div>
              <div class="rule-list">
                <div class="rule-item">
                  <div class="sanction-icon">
                    <i class="fas fa-exclamation-triangle"></i>
                  </div>
                  <div class="rule-content">
                    <h3>Avertissement</h3>
                    <p>
                      Premier niveau de sanction pour les infractions mineures.
                    </p>
                  </div>
                </div>
                <div class="rule-item">
                  <div class="sanction-icon">
                    <i class="fas fa-clock"></i>
                  </div>
                  <div class="rule-content">
                    <h3>Kick Temporaire</h3>
                    <p>Exclusion temporaire du serveur de 1 heure à 7 jours.</p>
                  </div>
                </div>
                <div class="rule-item">
                  <div class="sanction-icon">
                    <i class="fas fa-times-circle"></i>
                  </div>
                  <div class="rule-content">
                    <h3>Bannissement</h3>
                    <p>
                      Exclusion définitive pour les infractions graves ou
                      récidives.
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Navigation rapide -->
          <div class="quick-navigation">
            <h3><i class="fas fa-compass"></i> Navigation rapide</h3>
            <div class="nav-links">
              <a href="guides.html" class="nav-link-card">
                <i class="fas fa-book-open"></i>
                <div>
                  <h4>Guides Débutant</h4>
                  <p>Premiers pas sur le serveur</p>
                </div>
              </a>
              <a href="commands.html" class="nav-link-card">
                <i class="fas fa-terminal"></i>
                <div>
                  <h4>Commandes</h4>
                  <p>Liste des commandes utiles</p>
                </div>
              </a>
              <a href="jobs.html" class="nav-link-card">
                <i class="fas fa-briefcase"></i>
                <div>
                  <h4>Métiers</h4>
                  <p>Découvrir les activités</p>
                </div>
              </a>
            </div>
          </div>
        </div>
      </section>
</Layout>

<style>
  @import url('../styles/rules.css');
</style>