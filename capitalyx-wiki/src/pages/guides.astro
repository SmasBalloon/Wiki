---
import Layout from "../layouts/Layout.astro"
---

<Layout title="Guides" description="Guide pour Capitalyx">
  <!-- Breadcrumbs -->
    <section class="breadcrumb">
        <div class="container">
            <nav class="breadcrumb-nav">
                <div class="breadcrumb-item">
                    <i class="fas fa-home breadcrumb-icon"></i>
                    <a href="index.html">Accueil</a>
                </div>
                <span class="breadcrumb-separator">
                    <i class="fas fa-chevron-right"></i>
                </span>
                <div class="breadcrumb-item active">
                    <i class="fas fa-book-open breadcrumb-icon"></i>
                    <span>Guides</span>
                </div>
            </nav>
        </div>
    </section>

    <!-- Main Content -->
    <main class="main-content">
        <section class="page-hero">
            <div class="container">
                <h1 class="page-title">
                    <i class="fas fa-book-open"></i>
                    Guides du Serveur
                </h1>
                <p class="page-subtitle">Tous les guides pour bien commencer votre aventure tycoon sur Capitalyx</p>
            </div>
        </section>

        <section class="content-section">
            <div class="container">
                <!-- Bouton TOC fixe -->
                <button class="toc-fixed-button" onclick="openTOCModal()" title="Table des matières">
                    <i class="fas fa-list"></i>
                </button>

                <!-- Modal TOC -->
                <div class="toc-modal" id="tocModal">
                    <div class="toc-modal-content">
                        <div class="toc-modal-header">
                            <h3 class="toc-modal-title">
                                <i class="fas fa-list"></i>
                                Table des matières
                            </h3>
                            <button class="toc-modal-close" onclick="closeTOCModal()">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                        <ul class="toc-modal-list">
                            <li class="toc-modal-item">
                                <a href="#guides-debutant" class="toc-modal-link" onclick="closeTOCModal()">
                                    <i class="fas fa-play"></i>
                                    Guides Débutant
                                </a>
                            </li>
                            <li class="toc-modal-item">
                                <a href="#zones-activite" class="toc-modal-link" onclick="closeTOCModal()">
                                    <i class="fas fa-map"></i>
                                    Zones d'Activité
                                </a>
                            </li>
                            <li class="toc-modal-item">
                                <a href="#metiers-business" class="toc-modal-link" onclick="closeTOCModal()">
                                    <i class="fas fa-dollar-sign"></i>
                                    Métiers & Business
                                </a>
                            </li>
                            <li class="toc-modal-item">
                                <a href="#communication" class="toc-modal-link" onclick="closeTOCModal()">
                                    <i class="fas fa-comments"></i>
                                    Communication & Coopération
                                </a>
                            </li>
                            <li class="toc-modal-item">
                                <a href="#factions" class="toc-modal-link" onclick="closeTOCModal()">
                                    <i class="fas fa-users-cog"></i>
                                    Factions & Bonus
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="guides-grid">
                    <div class="guide-category" id="guides-debutant">
                        <div class="category-header">
                            <i class="fas fa-play"></i>
                            <h2>Guides Débutant</h2>
                        </div>
                        <div class="guide-list">
                            <div class="guide-item">
                                <div class="guide-icon">
                                    <i class="fas fa-server"></i>
                                </div>
                                <div class="guide-content">
                                    <h3>Comment Rejoindre le Serveur</h3>
                                    <p>Instructions complètes pour vous connecter à Capitalyx pour la première fois.</p>
                                    <div class="guide-steps">
                                        <ol>
                                            <li>Ouvrir FiveM</li>
                                            <li>Aller dans l'onglet Serveurs</li>
                                            <li>Rechercher "Capitalyx"</li>
                                            <li>Cliquer sur Se connecter</li>
                                        </ol>
                                    </div>
                                </div>
                            </div>
                            <div class="guide-item">
                                <div class="guide-icon">
                                    <i class="fas fa-user-plus"></i>
                                </div>
                                <div class="guide-content">
                                    <h3>Création de Personnage</h3>
                                    <p>Guide pour créer votre personnage et choisir votre orientation business.</p>
                                    <div class="guide-tips">
                                        <p><strong>Conseils :</strong></p>
                                        <ul>
                                            <li>Choisissez un nom pour votre entrepreneur</li>
                                            <li>Pensez au type de business qui vous intéresse</li>
                                            <li>Définissez vos objectifs économiques</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="guide-category" id="zones-activite">
                        <div class="category-header">
                            <i class="fas fa-map"></i>
                            <h2>Zones d'Activité</h2>
                        </div>
                        <div class="guide-list">
                            <div class="guide-item">
                                <div class="guide-icon">
                                    <i class="fas fa-industry"></i>
                                </div>
                                <div class="guide-content">
                                    <h3>Lieux de Production</h3>
                                    <p>Découvrez les zones clés pour développer votre business.</p>
                                    <div class="locations-list">
                                        <ul>
                                            <li><strong>Zones Agricoles :</strong> Fermes et cultures</li>
                                            <li><strong>Mines :</strong> Extraction de ressources</li>
                                            <li><strong>Centres Commerciaux :</strong> Vente et commerce</li>
                                            <li><strong>Entrepôts :</strong> Stockage et logistique</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="guide-category" id="metiers-business">
                        <div class="category-header">
                            <i class="fas fa-dollar-sign"></i>
                            <h2>Métiers & Business</h2>
                        </div>
                        <div class="guide-list">
                            <div class="guide-item">
                                <div class="guide-icon">
                                    <i class="fas fa-briefcase"></i>
                                </div>
                                <div class="guide-content">
                                    <h3>Choisir son Métier</h3>
                                    <p>Guide pour sélectionner le métier qui correspond à votre style de jeu.</p>
                                    <div class="money-methods">
                                        <ul>
                                            <li><strong>Fermier :</strong> Culture et élevage</li>
                                            <li><strong>Mineur :</strong> Extraction de minerais</li>
                                            <li><strong>Commerçant :</strong> Achat/vente de biens</li>
                                            <li><strong>Transporteur :</strong> Logistique et livraisons</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="guide-item">
                                <div class="guide-icon">
                                    <i class="fas fa-exchange-alt"></i>
                                </div>
                                <div class="guide-content">
                                    <h3>Système d'Échanges</h3>
                                    <p>Comment commercer avec d'autres joueurs et bénéficier des bonus de groupe.</p>
                                    <div class="bank-info">
                                        <p><strong>Méthodes d'échange :</strong></p>
                                        <ul>
                                            <li>Vente directe entre joueurs</li>
                                            <li>Marchés communautaires</li>
                                            <li>Systèmes de troc</li>
                                            <li>Bonus de faction/entreprise</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="guide-category" id="communication">
                        <div class="category-header">
                            <i class="fas fa-comments"></i>
                            <h2>Communication & Coopération</h2>
                        </div>
                        <div class="guide-list">
                            <div class="guide-item">
                                <div class="guide-icon">
                                    <i class="fas fa-headset"></i>
                                </div>
                                <div class="guide-content">
                                    <h3>Systèmes de Communication</h3>
                                    <p>Guide des différents moyens de communiquer et collaborer.</p>
                                    <div class="chat-commands">
                                        <ul>
                                            <li><strong>/trade</strong> - Proposer un échange</li>
                                            <li><strong>/help</strong> - Demander de l'aide</li>
                                            <li><strong>/market</strong> - Accéder au marché</li>
                                            <li><strong>/team</strong> - Communication d'équipe</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="guide-category" id="factions">
                        <div class="category-header">
                            <i class="fas fa-users-cog"></i>
                            <h2>Factions & Bonus</h2>
                        </div>
                        <div class="guide-list">
                            <div class="guide-item">
                                <div class="guide-icon">
                                    <i class="fas fa-users"></i>
                                </div>
                                <div class="guide-content">
                                    <h3>Rejoindre une Faction</h3>
                                    <p>Les factions offrent des avantages pour optimiser votre progression.</p>
                                    <div class="chat-commands">
                                        <ul>
                                            <li><strong>Bonus XP :</strong> Progression accélérée dans vos métiers</li>
                                            <li><strong>Avantages économiques :</strong> Légers bonus sur les gains</li>
                                            <li><strong>Entraide :</strong> Support et conseils des membres</li>
                                            <li><strong>Événements :</strong> Accès à des activités spéciales</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Navigation rapide -->
                <div class="quick-navigation">
                    <h3><i class="fas fa-compass"></i> Navigation rapide</h3>
                    <div class="nav-links">
                        <a href="rules.html" class="nav-link-card">
                            <i class="fas fa-gavel"></i>
                            <div>
                                <h4>Règlement</h4>
                                <p>Toutes les règles du serveur</p>
                            </div>
                        </a>
                        <a href="commands.html" class="nav-link-card">
                            <i class="fas fa-terminal"></i>
                            <div>
                                <h4>Commandes</h4>
                                <p>Liste des commandes utiles</p>
                            </div>
                        </a>
                        <a href="jobs.html" class="nav-link-card">
                            <i class="fas fa-briefcase"></i>
                            <div>
                                <h4>Métiers</h4>
                                <p>Guide des métiers disponibles</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
  @import url("../styles/guides.css");
</style>