---
import Layout from "../../layouts/Layout.astro"
---

<Layout title="EMS / Ambulancier" description="Guide complet pour devenir EMS / Ambulancier sur Capitalyx">
    <main class="main-content">
        <!-- Titre de la page -->
        <section class="page-header">
            <div class="container">
                <div class="page-title-wrapper">
                    <div class="page-icon">
                        <i class="fas fa-bus"></i>
                    </div>
                    <div class="page-title-content">
                        <h1 class="page-main-title">EMS / Ambulancier</h1>
                        <p class="page-description">Guide complet pour devenir EMS / Ambulancier sur Capitalyx</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="job-section location-section">
            <div class="container">
                <h2 class="section-title">
                    <i class="fas fa-map-marker-alt"></i>
                    Où Chercher
                </h2>
                <div class="location-grid">
                    <div class="location-item">
                        <div class="location-image">
                            <img src="/assets/img/jobs/busdriver/busstation.webp" alt="Gare routière" loading="lazy">
                        </div>
                        <div class="location-content">
                            <h3 class="location-title">Gare Routière</h3>
                            <p class="location-description">Rendez-vous à la gare routière pour obtenir votre certification 
                                de conducteur et accéder aux bus</p>
                        </div>
                    </div>
                    <div class="location-item">
                        <div class="location-image">
                            <img src="/assets/img/jobs/busdriver/busmap.webp" alt="Localisation sur la carte" loading="lazy">
                        </div>
                        <div class="location-content">
                            <h3 class="location-title">Localisation</h3>
                            <p class="location-description">La gare routière se trouve au l'est de la ville. Près de l'hôpital de PillBox.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Comment commencer -->
        <section class="job-section">
            <div class="container">
                <h2 class="section-title">
                    <i class="fas fa-play-circle"></i>
                    Comment Commencer
                </h2>
                <div class="steps-grid">
                    <div class="step-item">
                        <div class="step-number">1</div>
                        <div class="step-content">
                            <h4>Accéder au Bus</h4>
                            <p>Activez le marqueur du dépôt pour faire apparaître votre bus</p>
                        </div>
                    </div>
                    <div class="step-item">
                        <div class="step-number">2</div>
                        <div class="step-content">
                            <h4>Charger les Passagers</h4>
                            <p>Suivez l'itinéraire et arrêtez-vous aux arrêts pour embarquer les voyageurs</p>
                        </div>
                    </div>
                    <div class="step-item">
                        <div class="step-number">3</div>
                        <div class="step-content">
                            <h4>Compléter le Trajet</h4>
                            <p>Respectez les horaires et les arrêts pour recevoir votre rémunération</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Récompenses et différents niveaux-->
        <section class="job-section">
            <div class="container">
                <h2 class="section-title">
                    <i class="fas fa-trophy"></i>
                    Déblocages et Récompenses
                </h2>

                <!-- Tableau des déblocages de tiers et véhicules -->
                <div class="table-section">
                    <div class="unlocks-table">
                        <div class="table-header">
                            <div>Niveau Requis</div>
                            <div>Déblocage</div>
                            <div>Bonus Gains</div>
                        </div>
                        <div class="table-row">
                            <div class="level">1</div>
                            <div>Trains Régionaux</div>
                            <div>Accès aux lignes courtes</div>
                        </div>
                        <div class="table-row">
                            <div class="level">20</div>
                            <div>Trains Express</div>
                            <div>+25% de gains pour trajets rapides</div>
                        </div>
                        <div class="table-row">
                            <div class="level">45</div>
                            <div>Trains de Fret</div>
                            <div>+40% de gains, transport de marchandises</div>
                        </div>
                        <div class="table-row">
                            <div class="level">65</div>
                            <div>Trains Haute Vitesse</div>
                            <div>+65% de gains pour lignes premium</div>
                        </div>
                        <div class="table-row">
                            <div class="level">80</div>
                            <div>Trains de Nuit</div>
                            <div>Bonus +30% entre 21h-7h</div>
                        </div>
                    </div>
                </div>

                <!-- Tableau des récompenses par tier -->
                <div class="table-section">
                    <div class="rewards-table">
                        <div class="table-header">
                            <div>Type</div>
                            <div>Distance</div>
                            <div>Arrêts</div>
                            <div>Gains</div>
                            <div>XP</div>
                        </div>
                        <div class="table-row">
                            <div class="level">Régional</div>
                            <div>0-5km</div>
                            <div>2-4 stations</div>
                            <div>300-500$</div>
                            <div>150</div>
                        </div>
                        <div class="table-row">
                            <div class="level">Express</div>
                            <div>5-15km</div>
                            <div>3-6 stations</div>
                            <div>600-900$</div>
                            <div>300</div>
                        </div>
                        <div class="table-row">
                            <div class="level">Fret</div>
                            <div>10-25km</div>
                            <div>2-3 dépôts</div>
                            <div>1000-1400$</div>
                            <div>450</div>
                        </div>
                        <div class="table-row">
                            <div class="level">Haute Vitesse</div>
                            <div>20km+</div>
                            <div>4+ stations</div>
                            <div>1500-2200$</div>
                            <div>600</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="job-navigation">
            <div class="container">
                <a href="/jobs.html" class="btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Retour aux métiers
                </a>
            </div>
        </section>
    </main>

</Layout>

<style>
    @import url("../../styles/busdriver.css");
</style>