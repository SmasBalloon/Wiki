---
import Layout from "../../layouts/Layout.astro"
---

<Layout title="Jobs" description="Available jobs on the server">
    <section class="breadcrumb">
        <div class="container">
            <nav class="breadcrumb-nav">
                <div class="breadcrumb-item">
                    <i class="fas fa-home breadcrumb-icon"></i>
                    <a href="/">Home</a>
                </div>
                <span class="breadcrumb-separator">
                    <i class="fas fa-chevron-right"></i>
                </span>
                <div class="breadcrumb-item active">
                    <i class="fas fa-briefcase breadcrumb-icon"></i>
                    <span>Jobs</span>
                </div>
            </nav>
        </div>
    </section>

    <!-- Main Content -->
    <main class="main-content">
        <section class="page-hero">
            <div class="container">
                <h1 class="page-title">
                    <i class="fas fa-briefcase"></i>
                    Available Jobs
                </h1>
                <p class="page-subtitle">Discover all the jobs available on Capitalyx</p>
            </div>
        </section>

        <section class="content-section">
            <div class="container">
                <div class="jobs-grid">
                    <!-- Bus -->
                    <a href="/jobs/busdriver" class="job-card">
                        <i class="fas fa-bus job-icon"></i>
                        <h3 class="job-title">Bus Driver</h3>
                        <p class="job-description">Public transportation for citizens</p>
                    </a>

                    <!-- Truck -->
                    <a href="/jobs/truckdriver" class="job-card">
                        <i class="fas fa-truck job-icon"></i>
                        <h3 class="job-title">Truck Driver</h3>
                        <p class="job-description">Goods transportation</p>
                    </a>

                    <!-- Helicopter -->
                    <a href="/jobs/helicopterdriver" class="job-card">
                        <i class="fas fa-helicopter job-icon"></i>
                        <h3 class="job-title">Helicopter Pilot</h3>
                        <p class="job-description">Air transport and special missions</p>
                    </a>

                    <!-- Airplane -->
                    <a href="/jobs/avionpilot" class="job-card">
                        <i class="fas fa-plane job-icon"></i>
                        <h3 class="job-title">Airplane Pilot</h3>
                        <p class="job-description">Long-distance air transport</p>
                    </a>

                    <!-- EMS -->
                    <a href="/jobs/ems" class="job-card">
                        <i class="fas fa-ambulance job-icon"></i>
                        <h3 class="job-title">EMS / Paramedic</h3>
                        <p class="job-description">Emergency medical services</p>
                    </a>

                    <!-- Taxi -->
                    <a href="/jobs/cab" class="job-card">
                        <i class="fas fa-taxi job-icon"></i>
                        <h3 class="job-title">Taxi Driver</h3>
                        <p class="job-description">Private passenger transport</p>
                    </a>

                    <!-- Courier -->
                    <a href="/jobs/courier" class="job-card courier-card">
                        <i class="fas fa-shipping-fast job-icon"></i>
                        <h3 class="job-title">Courier / Delivery Driver</h3>
                        <p class="job-description">Package delivery and transportation</p>
                    </a>

                    <!-- Train -->
                    <a href="/jobs/trainconductor" class="job-card">
                        <i class="fas fa-train job-icon"></i>
                        <h3 class="job-title">Train Conductor</h3>
                        <p class="job-description">Operating trains</p>
                    </a>
                </div>

                <!-- Quick Navigation -->
                <div class="quick-navigation">
                    <h3><i class="fas fa-compass"></i> Quick Navigation</h3>
                    <div class="nav-links">
                        <a href="rules" class="nav-link-card">
                            <i class="fas fa-gavel"></i>
                            <div>
                                <h4>Rules</h4>
                                <p>Job and activity regulations</p>
                            </div>
                        </a>
                        <a href="guides" class="nav-link-card">
                            <i class="fas fa-book-open"></i>
                            <div>
                                <h4>Guides</h4>
                                <p>How to choose your job</p>
                            </div>
                        </a>
                        <a href="commands" class="nav-link-card">
                            <i class="fas fa-terminal"></i>
                            <div>
                                <h4>Commands</h4>
                                <p>Useful commands for jobs</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    @import url("../../styles/jobs.css");
</style>
