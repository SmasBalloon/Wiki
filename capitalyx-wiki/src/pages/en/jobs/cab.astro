---
import Layout from "../../layouts/Layout.astro"
---

<Layout title="Chauffeur de Taxi | Capitalyx Wiki" description="Guide complet pour devenir chauffeur de taxi sur Capitalyx">
    <main class="main-content">
        <!-- Titre de la page -->
        <section class="page-header">
            <div class="container">
                <div class="page-title-wrapper">
                    <div class="page-icon">
                        <i class="fas fa-taxi"></i>
                    </div>
                    <div class="page-title-content">
                        <h1 class="page-main-title">Chauffeur de Taxi</h1>
                        <p class="page-description">Guide complet pour devenir chauffeur de taxi sur Capitalyx</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="job-section location-section">
            <div class="container">
                <h2 class="section-title">
                    <i class="fas fa-map-marker-alt"></i>
                    Où Chercher ?
                </h2>
                <div class="location-grid">
                    <div class="location-item">
                        <div class="location-image">
                            <img src="/assets/img/jobs/cab/cabbuilding.webp" alt="Bâtiment des taxis" loading="lazy">
                        </div>
                        <div class="location-content">
                            <h3 class="location-title">Centre des Taxis</h3>
                            <p class="location-description">Rendez-vous au centre des taxis pour obtenir votre licence
                                et louer votre premier véhicule</p>
                        </div>
                    </div>
                    <div class="location-item">
                        <div class="location-image">
                            <img src="/assets/img/jobs/cab/cabmap.webp" alt="Localisation sur la carte" loading="lazy">
                        </div>
                        <div class="location-content">
                            <h3 class="location-title">Localisation</h3>
                            <p class="location-description">Consultez la carte pour trouver l'emplacement exact du
                                bureau des taxis en ville. Il se trouve juste au sud du Casino à l'est de la ville.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Comment commencer -->
        <section class="job-section">
            <div class="container">
                <h2 class="section-title">
                    <i class="fas fa-play-circle"></i>
                    Comment Commencer ?
                </h2>
                <div class="steps-grid">
                    <div class="step-item">
                        <div class="step-number">1</div>
                        <div class="step-content">
                            <h4>Se Rendre au Concessionnaire</h4>
                            <p>Allez au concessionnaire pour récupérer votre premier véhicule (gratuit)</p>
                        </div>
                    </div>
                    <div class="step-item">
                        <div class="step-number">2</div>
                        <div class="step-content">
                            <h4>Se Rendre au Centre</h4>
                            <p>Activez le marqueur pour démarrer votre course</p>
                        </div>
                    </div>
                    <div class="step-item">
                        <div class="step-number">3</div>
                        <div class="step-content">
                            <h4>Prendre des Clients</h4>
                            <p>Suivez le marqueur sur la carte pour récupérer le client et le conduire</p>
                        </div>
                    </div>
                    <div class="step-item">
                        <div class="step-number">4</div>
                        <div class="step-content">
                            <h4>Plusieurs Clients</h4>
                            <p>Vous pouvez avoir plusieurs arrêts avant de finir votre service</p>
                        </div>
                    </div>
                    <div class="step-item">
                        <div class="step-number">5</div>
                        <div class="step-content">
                            <h4>Recevoir la Récompense</h4>
                            <p>Encaissez votre paiement bonus de fin de service</p>
                        </div>
                    </div>
                    <div class="step-item">
                        <div class="step-number">6</div>
                        <div class="step-content">
                            <h4>Répéter le Processus</h4>
                            <p>Enchaînez les courses pour maximiser vos gains</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Récompenses et différents niveaux-->
        <section class="job-section">
            <div class="container">
                <h2 class="section-title">
                    <i class="fas fa-trophy"></i>
                    Déblocages et Récompenses
                </h2>

                <!-- Tableau des déblocages de tiers de courses -->
                <div class="table-section">
                    <h3 class="table-subtitle">
                        <i class="fas fa-route"></i>
                        Tiers de Courses
                    </h3>
                    <div class="unlocks-table">
                        <div class="table-header">
                            <div>Niveau Requis</div>
                            <div>Tier de Course</div>
                            <div>Localisation</div>
                        </div>
                        <div class="table-row">
                            <div class="level">1</div>
                            <div>Courses Tier 1</div>
                            <div>Quartier Casino - Est de Los Santos</div>
                        </div>
                        <div class="table-row">
                            <div class="level">10</div>
                            <div>Courses Tier 2</div>
                            <div>Centre-Ville - Nord de Los Santos</div>
                        </div>
                        <div class="table-row">
                            <div class="level">40</div>
                            <div>Courses Tier 3</div>
                            <div>Del Perro - LSIA - Terminal</div>
                        </div>
                        <div class="table-row">
                            <div class="level">60</div>
                            <div>Courses Tier 4</div>
                            <div>Sandy Shores - Paleto Bay - Grapeseed</div>
                        </div>
                        <div class="table-row">
                            <div class="level">75</div>
                            <div>Courses de Nuit</div>
                            <div>Bonus +15% entre 22h et 6h</div>
                        </div>
                    </div>
                </div>

                <!-- Tableau des véhicules débloqués -->
                <div class="table-section">
                    <h3 class="table-subtitle">
                        <i class="fas fa-car"></i>
                        Véhicules Débloqués
                    </h3>
                    <div class="unlocks-table">
                        <div class="table-header">
                            <div>Niveau Requis</div>
                            <div>Véhicule</div>
                            <div>Avantages</div>
                            <div>Prix</div>
                        </div>
                        <div class="table-row">
                            <div class="level">1</div>
                            <div>Taxi</div>
                            <div>Aucun Bonus</div>
                            <div>Gratuit</div>
                        </div>
                        <div class="table-row">
                            <div class="level">20</div>
                            <div>Dilettante</div>
                            <div>Léger bonus général sur $ et XP</div>
                            <div>100 000 $</div>
                        </div>
                        <div class="table-row">
                            <div class="level">45</div>
                            <div>Cabby</div>
                            <div>Bonus XP et $, Malus sur la vitesse</div>
                            <div>200 000 $</div>
                        </div>
                        <div class="table-row">
                            <div class="level">60</div>
                            <div>Asterope</div>
                            <div>Bonus significatif de vitesse et tenue de route</div>
                            <div>300 000 $</div>
                        </div>
                    </div>
                </div>

                <!-- Tableau des récompenses par tier -->
                <div class="table-section">
                    <h3 class="table-subtitle">
                        <i class="fas fa-dollar-sign"></i>
                        Récompenses par Tier
                    </h3>
                    <div class="rewards-table">
                        <div class="table-header">
                            <div>Tier</div>
                            <div>Distance</div>
                            <div>Arrêts requis</div>
                            <div>Gains</div>
                            <div>XP</div>
                        </div>
                        <div class="table-row">
                            <div class="level">1</div>
                            <div>0-2km</div>
                            <div>1-2 arrêts</div>
                            <div>150-250$</div>
                            <div>100</div>
                        </div>
                        <div class="table-row">
                            <div class="level">2</div>
                            <div>2-5km</div>
                            <div>3-4 arrêts</div>
                            <div>300-450$</div>
                            <div>200</div>
                        </div>
                        <div class="table-row">
                            <div class="level">3</div>
                            <div>5-10km</div>
                            <div>5-6 arrêts</div>
                            <div>500-750$</div>
                            <div>300</div>
                        </div>
                        <div class="table-row">
                            <div class="level">4</div>
                            <div>10km+</div>
                            <div>7+ arrêts</div>
                            <div>800-1200$</div>
                            <div>400</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="job-navigation">
            <div class="container">
                <a href="/jobs.html" class="btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Retour aux métiers
                </a>
            </div>
        </section>
    </main>
</Layout>

<style>
    @import url("../../styles/cab.css");
</style>