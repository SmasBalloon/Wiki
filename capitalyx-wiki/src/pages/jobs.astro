---
import Layout from "../layouts/Layout.astro"
---

<Layout title="metier" description="metier disponible sur le serveur">
    <section class="breadcrumb">
        <div class="container">
            <nav class="breadcrumb-nav">
                <div class="breadcrumb-item">
                    <i class="fas fa-home breadcrumb-icon"></i>
                    <a href="/">Accueil</a>
                </div>
                <span class="breadcrumb-separator">
                    <i class="fas fa-chevron-right"></i>
                </span>
                <div class="breadcrumb-item active">
                    <i class="fas fa-briefcase breadcrumb-icon"></i>
                    <span>Métiers</span>
                </div>
            </nav>
        </div>
    </section>

    <!-- Main Content -->
    <main class="main-content">
        <section class="page-hero">
            <div class="container">
                <h1 class="page-title">
                    <i class="fas fa-briefcase"></i>
                    Métiers Disponibles
                </h1>
                <p class="page-subtitle">Découvrez tous les emplois disponibles sur Capitalyx</p>
            </div>
        </section>

        <section class="content-section">
            <div class="container">
                <div class="jobs-grid">
                    <!-- Bus -->
                    <a href="/jobs/busdriver" class="job-card">
                        <i class="fas fa-bus job-icon"></i>
                        <h3 class="job-title">Chauffeur de Bus</h3>
                        <p class="job-description">Transport public des citoyens</p>
                    </a>

                    <!-- Camions -->
                    <a href="/jobs/truckdriver" class="job-card">
                        <i class="fas fa-truck job-icon"></i>
                        <h3 class="job-title">Chauffeur de Camion</h3>
                        <p class="job-description">Transport de marchandises</p>
                    </a>

                    <!-- Hélicoptère -->
                    <a href="/jobs/helicopterdriver" class="job-card">
                        <i class="fas fa-helicopter job-icon"></i>
                        <h3 class="job-title">Pilote d'Hélicoptère</h3>
                        <p class="job-description">Transport aérien et missions spéciales</p>
                    </a>

                    <!-- Avions -->
                    <a href="/jobs/avionpilot" class="job-card">
                        <i class="fas fa-plane job-icon"></i>
                        <h3 class="job-title">Pilote d'Avion</h3>
                        <p class="job-description">Transport aérien longue distance</p>
                    </a>

                    <!-- EMS -->
                    <a href="/jobs/ems" class="job-card">
                        <i class="fas fa-ambulance job-icon"></i>
                        <h3 class="job-title">EMS / Ambulancier</h3>
                        <p class="job-description">Services médicaux d'urgence</p>
                    </a>

                    <!-- Taxi -->
                    <a href="/jobs/cab" class="job-card">
                        <i class="fas fa-taxi job-icon"></i>
                        <h3 class="job-title">Chauffeur de Taxi</h3>
                        <p class="job-description">Transport privé de passagers</p>
                    </a>

                    <!-- Livreur/Transporteur -->
                    <a href="/jobs/courier" class="job-card courier-card">
                        <i class="fas fa-shipping-fast job-icon"></i>
                        <h3 class="job-title">Livreur / Transporteur</h3>
                        <p class="job-description">Livraison et transport de colis</p>
                    </a>

                    <!-- Conducteur de Train -->
                    <a href="/jobs/trainconductor" class="job-card">
                        <i class="fas fa-train job-icon"></i>
                        <h3 class="job-title">Conducteur de Train</h3>
                        <p class="job-description">Conduite de trains</p>
                    </a>
                </div>

                <!-- Navigation rapide -->
                <div class="quick-navigation">
                    <h3><i class="fas fa-compass"></i> Navigation rapide</h3>
                    <div class="nav-links">
                        <a href="rules" class="nav-link-card">
                            <i class="fas fa-gavel"></i>
                            <div>
                                <h4>Règlement</h4>
                                <p>Règles des métiers et activités</p>
                            </div>
                        </a>
                        <a href="guides" class="nav-link-card">
                            <i class="fas fa-book-open"></i>
                            <div>
                                <h4>Guides</h4>
                                <p>Comment choisir son métier</p>
                            </div>
                        </a>
                        <a href="commands" class="nav-link-card">
                            <i class="fas fa-terminal"></i>
                            <div>
                                <h4>Commandes</h4>
                                <p>Commandes utiles pour les métiers</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    @import url("../styles/jobs.css");
</style>